        <!-- ========================== -->
    <!--  UWB MODULES (Left & Right) -->
    <!-- ========================== -->

    <!-- LEFT UWB MODULE -->
    <joint name="uwb_left_joint" type="fixed">
        <parent link="chassis"/>
        <!-- Position slightly behind left wheel -->
        <child link="uwb_left"/>
        <origin xyz="0.05 0.12 0.05" rpy="0 0 0"/>
    </joint>

    <link name="uwb_left">
        <visual>
            <geometry>
                <!-- Approximate UWB tag as a small box -->
                <box size="0.04 0.02 0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.04 0.04 0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.05" x="0.04" y="0.04" z="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="uwb_left">
        <material>Gazebo/Orange</material>
    </gazebo>


    <!-- RIGHT UWB MODULE -->
    <joint name="uwb_right_joint" type="fixed">
        <parent link="chassis"/>
        <!-- Position slightly behind right wheel -->
        <child link="uwb_right"/>
        <origin xyz="0.05 -0.12 0.05" rpy="0 0 0"/>
    </joint>

    <link name="uwb_right">
        <visual>
            <geometry>
                <box size="0.04 0.02 0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.04 0.04 0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.05" x="0.04" y="0.04" z="0.02">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="uwb_right">
        <material>Gazebo/Orange</material>
    </gazebo>



    <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.09213 0 0"/>
    </joint>


    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.06"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.2" radius="0.06">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>